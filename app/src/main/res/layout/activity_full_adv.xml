<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ProgressBar
        android:id="@+id/progress_activity_full_adv"
        style="@style/progress_circle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:indeterminateDuration="700" />

    <ImageView
        android:id="@+id/bg_activity_full_adv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:scaleType="fitXY" />

    <VideoView
        android:id="@+id/videoView_activity_full_adv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/fl_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvTime_activity_full_adv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:background="@drawable/full_adv_info_bg_translucence"
            android:text="15秒后可关闭,并获得三小时免费上网时间"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnVolume_activity_full_adv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/full_adv_info_bg_translucence"
            android:scaleType="fitXY"
            android:src="@drawable/mute_on"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnClose_activity_full_adv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@drawable/full_adv_info_bg_green"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:visibility="gone"/>
    </LinearLayout>
</FrameLayout>