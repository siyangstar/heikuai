<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlebar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">

    <com.cqsynet.swifi.view.TitleBar
        android:id="@+id/titlebar_activity_my_bottle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:showLeftIcon="true"
        titlebar:showRightIcon="true"/>

    <ListView
        android:id="@+id/listView_activity_my_bottle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar_activity_my_bottle"
        android:divider="@color/line"
        android:dividerHeight="1px"
        android:cacheColorHint="#00000000"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="true"
        android:smoothScrollbar="true"/>

    <TextView
        android:id="@+id/tvNoBottleHint_activity_my_bottle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text3"
        android:textSize="@dimen/text_size_mediumx"
        android:text="@string/no_bottle"
        android:visibility="gone"/>

</RelativeLayout>