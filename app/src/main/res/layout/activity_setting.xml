<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:titlebar="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_grey"
              android:orientation="vertical">

    <com.cqsynet.swifi.view.TitleBar
        android:id="@+id/titlebar_activity_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        titlebar:showLeftIcon="true"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:onClick="updatePhone"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录手机号修改"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/my_account"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:onClick="updatePwd"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="密码修改"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/my_account"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:onClick="about"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于嘿快"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:onClick="hotLine"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招商热线"
                    android:textStyle="bold"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:id="@+id/llCleanAppCache_activity_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:onClick="cleanCache"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清理缓存"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_size_large"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/tvCacheSize_activity_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="12M"
                    android:textColor="@color/text4"
                    android:textSize="@dimen/text_size_large"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:id="@+id/ll_setting_update"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:textColor="@color/text2"
                    android:textSize="@dimen/text_size_large"/>

                <ImageView
                    android:id="@+id/ivNewUpdate_setting"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/new_message_num_bg"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/my_account"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>

            <LinearLayout
                android:id="@+id/btnLogout_setting"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/layout_selecter"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp">

                <TextView
                    style="@style/setting_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:contentDescription="@string/my_account"
                    android:scaleType="fitXY"
                    android:src="@drawable/more"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>