<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="6dp">

    <TextView
        android:id="@+id/tvDate_chat_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:textColor="@color/text4"
        android:textSize="@dimen/text_size_small"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp">


        <ImageView
            android:id="@+id/ivHead_chat_item_right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/icon_profile_default_round"
            android:focusable="false"/>

        <LinearLayout
            android:id="@+id/llVoice_chat_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ivHead_chat_item_right"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:gravity="right|center_vertical"
            android:background="@drawable/chat_bg_right_selector">

            <ImageView
                android:id="@+id/ivVoice_chat_item_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/voice_right"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTime_chat_item_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/llVoice_chat_item_right"
            android:layout_centerVertical="true"
            android:textColor="@color/text3"
            android:textSize="@dimen/text_size_medium"/>

        <ProgressBar
            android:id="@+id/progress_chat_item_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/tvTime_chat_item_right"
            android:layout_centerInParent="true"
            android:indeterminateDuration="700"
            style="@style/progress_circle"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/ivFailed_chat_item_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@id/tvTime_chat_item_right"
            android:src="@drawable/chat_failed"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>