<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/iv_lottery_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/bg_no_lottery" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="76dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_lottery_logo"
                android:layout_width="270dp"
                android:layout_height="90dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_lottery_description"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="@color/text2"
                android:textSize="16sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_check_lottery"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_corner_white"
                android:gravity="center"
                android:text="@string/check_lottery"
                android:textColor="@color/red" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_close_dialog" />

</LinearLayout>