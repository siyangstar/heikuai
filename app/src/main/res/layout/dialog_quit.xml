<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="20dp">

    <TextView
        android:id="@+id/tvMsg_dialog_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_largex"
        android:text="退出登录会断开免费WiFi连接,\n确定要退出吗？" />

    <Button
        android:id="@+id/btnOk_dialog_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_green_bg_selector"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_largex" />

    <Button
        android:id="@+id/btnCancel_dialog_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_white_bg_selector"
        android:text="取消"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_largex" />

</LinearLayout>