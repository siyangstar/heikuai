<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/etInput_dialog_screenshot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="top|left"
        android:hint="请输入文字描述"
        android:padding="12dp"
        android:textColor="@color/text2"
        android:textColorHint="@color/text4"
        android:textSize="@dimen/text_size_large" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" >

        <TextView
            android:id="@+id/tvFinish_dialog_screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/finish"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tvCancel_dialog_screenshot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@id/tvFinish_dialog_screenshot"
            android:text="@string/cancel"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_large" />
    </RelativeLayout>

</LinearLayout>