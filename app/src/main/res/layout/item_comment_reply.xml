<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_item_bg_selector"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_avatar_item_comment_reply"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@null"
            android:src="@drawable/icon_profile_default_round"/>

        <TextView
            android:id="@+id/tv_nickname_item_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_mediumx"
            tools:text="嘿快用户王大壮"/>

        <TextView
            android:id="@+id/tv_userLevel_item_comment_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_green_radius_normal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            tools:text="编辑"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_content_item_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/text1"
            android:textSize="@dimen/text_size_large"
            tools:text="页面字段：昵称、ID、电话、操作人、已灌水数量、最近使用人、最新使用时间"/>

        <TextView
            android:id="@+id/tv_quote_item_comment_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/bg_grey"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:padding="8dp"
            android:textColor="@color/text2"
            android:textSize="@dimen/text_size_mediumx"
            tools:text="[原文]这是一篇原文简介,巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉巴拉"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date_item_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2小时前"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_size_small"/>

            <TextView
                android:id="@+id/tv_reply_item_comment_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="回复"
                android:textColor="@color/text3"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>