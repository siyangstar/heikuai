<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_grey">

    <ImageView
        android:id="@+id/ivBack_titlebar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_back_green_selector"
        android:contentDescription="@string/sreturn"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvTitle_titlebar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text2"
        android:textSize="@dimen/text_size_largexx"/>

    <ImageView
        android:id="@+id/ivMenu_titlebar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/sreturn"
        android:src="@drawable/btn_app_manager_white_selector"
        android:visibility="invisible"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ivBack_titlebar_layout"
        android:background="@color/line"/>

</RelativeLayout>